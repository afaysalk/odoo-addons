<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="maintenance_planning_plan_requests_wizard_form" model="ir.ui.view">
            <field name="name">Plan maintenance requests</field>
            <field name="model">maintenance_planning.plan.requests.wizard</field>
            <field name="arch" type="xml">
                <form string="Plan maintenance requests">
                    <group >
                        <span>Do you want to generate automatically all maintenance requests for your equipements.</span>
                    </group>
                    <footer>
                        <button string="Ok" type="object" name="confirm_plan" class="btn btn-primary" />
                        <button string="Cancel" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>